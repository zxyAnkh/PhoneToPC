<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.phonetopc.view.MainActivity" >

    <TextView
        android:id="@+id/txt_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="欢迎使用该应用"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/txt_pcip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="电脑IP地址：" />

        <EditText
            android:id="@+id/edt_pcip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="请输入电脑IP地址" >

            <requestFocus />
        </EditText>

        <Button
            android:id="@+id/btn_connect"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="连接" />
    </LinearLayout>

    <TextView
        android:id="@+id/txt_tips"
        android:layout_width="329dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="成功连接至电脑\n请选择操作"
        android:textSize="30sp" 
        android:visibility="invisible"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center" >

        <Button
            android:id="@+id/btn_choosesend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发送"
            android:visibility="invisible" />

        <Button
            android:id="@+id/btn_choosereceive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="下载" 
            android:visibility="invisible"/>

    </LinearLayout>

</LinearLayout>