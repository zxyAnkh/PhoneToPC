<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/a2"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.phonetopc.view.MainActivity" >


    <TextView
        android:id="@+id/txt_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="欢迎使用该应用"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/txt_dns"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="域名地址:" />

        <EditText
            android:id="@+id/edt_dns"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="zxyankh.imwork.net" >

            <requestFocus />
        </EditText>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/txt_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="zxy"
            android:text="用户名：" />

        <EditText
            android:id="@+id/edt_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="zxy" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/txt_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="密码：" />

        <EditText
            android:id="@+id/edt_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="textPassword" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center" >

        <Button
            android:id="@+id/btn_login"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="60dp"
			android:layout_height="30dp"
            android:background="@drawable/anniue"
            android:text="登录" />

        <Button
            android:id="@+id/btn_quit"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="60dp"
			android:layout_height="30dp"
            android:background="@drawable/anniue"
            android:text="注销" 
            android:visibility="invisible"/>

    </LinearLayout>

    <TextView
        android:id="@+id/txt_tips"
        android:layout_width="329dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="成功连接至电脑\n请选择操作"
        android:textSize="30sp" 
        android:visibility="invisible"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center" >

        <Button
            android:id="@+id/btn_choosesend"
            android:layout_width="60dp"
			android:layout_height="30dp"
            android:background="@drawable/anniue"
            android:text="上传"
            android:visibility="invisible" />

        <Button
            android:id="@+id/btn_choosereceive"
            android:layout_width="60dp"
			android:layout_height="30dp"
            android:background="@drawable/anniue"
            android:text="下载" 
            android:visibility="invisible"/>

        <Button
            android:id="@+id/btn_choosechat"
            android:layout_width="60dp"
			android:layout_height="30dp"
            android:background="@drawable/anniue"
            android:text="聊天" 
            android:visibility="invisible"/>

    </LinearLayout>

</LinearLayout>